{
  "version": "1.0.0", 
  "tools": [
    {
      "fileType": "*.yaml",
      "tool": {
        "name": "container-security-analysis",
        "version": "Latest"
      },
      "outputExtension": "sarif",
      "successExitCodes": [0],
      "arguments": {
        "exclude": [
          "k8s/dev/",
          "k8s/dev/**/*",
          "**/dev/**/*.yaml",
          "**/development/**/*.yaml",
          "setup-dev.sh"
        ]
      }
    },
    {
      "fileType": "*",
      "tool": {
        "name": "secure-supply-chain-analysis",
        "version": "Latest" 
      },
      "outputExtension": "sarif",
      "successExitCodes": [0, 1],
      "arguments": {
        "excludePaths": [
          "k8s/dev/",
          "**/dev/**",
          "**/development/**",
          "setup-dev.sh"
        ]
      }
    }
  ],
  "packages": [
    {
      "name": "Microsoft.Guardian.Cli",
      "version": "Latest"
    }
  ]
}
